<Application
    x:Class="Order_Processor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019" xmlns:Converters="clr-namespace:Order_Processor.Converters"
    StartupUri="Splash.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark" AccentColor="Red" />
                <ui:XamlControlsResources  />
                <ui:IntellisenseResources Source="/ModernWpf;component/DesignTime/DesignTimeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="SonnyGothic">./Assets/SonnyGothic.otf</FontFamily>
            <Converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
            <Converters:EnumDescriptionListConverter x:Key="EnumDescriptionListConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
