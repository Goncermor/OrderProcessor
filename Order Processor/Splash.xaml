<Window x:Class="Order_Processor.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Order_Processor"
        mc:Ignorable="d"
        Title="RPJM - Order Processor"
        Height="120"
        Width="200"
        Background="Black" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Image Margin="15,0,0,15" HorizontalAlignment="Left" Width="20" Height="20" VerticalAlignment="Bottom" Source="/Assets/Flag.ico"/>
        <Label Content="Order Processor" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" FontFamily="{StaticResource SonnyGothic}"/>
        <Label Content="By Goncermor" Margin="0,0,16,16" FontFamily="{StaticResource SonnyGothic}" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" FontSize="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="DarkGray"/>
    </Grid>
</Window>
